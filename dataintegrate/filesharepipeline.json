{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dataFactoryName": {
            "type": "string",
            "metadata": "Data Factory Name",
            "defaultValue": "bigdatashab-adf"
        },
        "FileServer1_password": {
            "type": "secureString",
            "metadata": "Secure string for 'password' of 'FileServer1'"
        },
        "AzureBlobStoragelinkedservice_connectionString": {
            "type": "secureString",
            "defaultValue": "DefaultEndpointsProtocol=https;AccountName=sqlpiplinestorage;AccountKey=vm9XB7HOhqXz63xI7CPrBAVnJSK1Sv5eQF3z5BTlER5zaKMPXy4NK4giQiTj41ArQAPsU8gPi0sUShf0xQ2f1Q==;EndpointSuffix=core.windows.net",
            "metadata": "Secure string for 'connectionString' of 'AzureBlobStoragelinkedservice'"
        },
        "FileServer1_username": {
            "type": "string",
            "defaultValue": "Azureadmin"
        }
    },
    "variables": {
        "pipelinename": "copyfilesharepipline",
        "inputlinkedservice": "fslsip1",
        "outputlinkedservice": "bloblsop1",
        "inputdatasetforfile": "fsdsip1",
        "outputdatasetforfile": "blobdsop1"
    },
    "resources": [
        {
            "name": "[parameters('dataFactoryName')]",
            "apiVersion": "2018-06-01",
            "type": "Microsoft.DataFactory/factories",
            "location": "[resourceGroup().location]",
            "properties": {
                "mode": "Incremental"
            },
            "resources": [
                {
                    "name": "[variables('pipelinename')]",
                    "type": "pipelines",
                    "apiVersion": "2018-06-01",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "activities": [
                            {
                                "name": "copyfilesharedfolder",
                                "type": "Copy",
                                "dependsOn": [],
                                "policy": {
                                    "timeout": "7.00:00:00",
                                    "retry": 0,
                                    "retryIntervalInSeconds": 30,
                                    "secureOutput": false,
                                    "secureInput": false
                                },
                                "userProperties": [],
                                "typeProperties": {
                                    "source": {
                                        "type": "DelimitedTextSource",
                                        "storeSettings": {
                                            "type": "FileServerReadSetting",
                                            "wildcardFileName": "*.*",
                                            "recursive": true
                                        },
                                        "formatSettings": {
                                            "type": "DelimitedTextReadSetting"
                                        }
                                    },
                                    "sink": {
                                        "type": "DelimitedTextSink",
                                        "storeSettings": {
                                            "type": "AzureBlobStorageWriteSetting"
                                        },
                                        "formatSettings": {
                                            "type": "DelimitedTextWriteSetting",
                                            "quoteAllText": true,
                                            "fileExtension": ".txt"
                                        }
                                    },
                                    "enableStaging": false
                                },
                                "inputs": [
                                    {
                                        "referenceName": "fsdsip1",
                                        "type": "DatasetReference",
                                        "parameters": {}
                                    }
                                ],
                                "outputs": [
                                    {
                                        "referenceName": "[variables('outputdatasetforfile')]",
                                        "type": "DatasetReference",
                                        "parameters": {}
                                    }
                                ]
                            }
                        ],
                        "annotations": []
                    },
                    "dependsOn": [
                        "[variables('inputdatasetforfile')]",
                        "[variables('outputdatasetforfile')]",
                        "[variables('inputlinkedservice')]",
                        "[variables('outputlinkedservice')]",
                        "[parameters('dataFactoryName')]"
                    ]
                },
                {
                    "name": "[variables('inputlinkedservice')]",
                    "type": "linkedServices",
                    "apiVersion": "2018-06-01",
                    "properties": {
                        "annotations": [],
                        "type": "FileServer",
                        "typeProperties": {
                            "host": "\\\\mysqlvmlabel1.eastus.cloudapp.azure.com\\share",
                            "userId": "[parameters('FileServer1_username')]",
                            "password": {
                                "type": "SecureString",
                                "value": "[parameters('FileServer1_password')]"
                            }
                        }
                    },
                    "dependsOn": [
                        "[parameters('dataFactoryName')]"
                    ]
                },
                {
                    "name": "[variables('outputlinkedservice')]",
                    "type": "linkedServices",
                    "apiVersion": "2018-06-01",
                    "properties": {
                        "annotations": [],
                        "type": "AzureBlobStorage",
                        "typeProperties": {
                            "connectionString": "[parameters('AzureBlobStoragelinkedservice_connectionString')]"
                        }
                    },
                    "dependsOn": [
                        "[parameters('dataFactoryName')]"
                    ]
                },
                {
                    "name": "[variables('inputdatasetforfile')]",
                    "type": "datasets",
                    "apiVersion": "2018-06-01",
                    "properties": {
                        "linkedServiceName": {
                            "referenceName": "[variables('inputlinkedservice')]",
                            "type": "LinkedServiceReference"
                        },
                        "annotations": [],
                        "type": "DelimitedText",
                        "typeProperties": {
                            "location": {
                                "type": "FileServerLocation",
                                "folderPath": "shab"
                            },
                            "columnDelimiter": ",",
                            "escapeChar": "\\",
                            "quoteChar": "\""
                        },
                        "schema": [
                            {
                                "name": "Prop_0",
                                "type": "String"
                            }
                        ]
                    },
                    "dependsOn": [
                        "[variables('inputlinkedservice')]",
                        "[parameters('dataFactoryName')]"
                    ]
                },
                {
                    "name": "[variables('outputdatasetforfile')]",
                    "type": "datasets",
                    "apiVersion": "2018-06-01",
                    "properties": {
                        "linkedServiceName": {
                            "referenceName": "[variables('outputlinkedservice')]",
                            "type": "LinkedServiceReference"
                        },
                        "annotations": [],
                        "type": "DelimitedText",
                        "typeProperties": {
                            "location": {
                                "type": "AzureBlobStorageLocation",
                                "container": "logs",
                                "folderPath":"input"
                            },
                            "columnDelimiter": ",",
                            "escapeChar": "\\",
                            "quoteChar": "\""
                        },
                        "schema": []
                    },
                    "dependsOn": [
                        "[variables('outputlinkedservice')]",
                        "[parameters('dataFactoryName')]"
                    ]
                }
            ]
        }
    ]
}