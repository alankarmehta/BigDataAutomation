{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "startIpAddress": {
      "type": "string",
      "metadata": {
        "description": "IP address to provide access too"
      }
    },
    "endIpAddress": {
      "type": "string",
      "metadata": {
        "description": "IP address to provide access too"
      }
    },
    "rgName": {
      "type": "string",
      "defaultValue": "[resourcegroup().name]"
    },
    "adlAnalyticsName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Data Lake Analytics account to create."
      }
    },
    "adlStoreName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Data Lake Store account to create."
      }
    }
  },
  "variables": {
    "adlsApiVersion": "2016-11-01",
    "adlaApiVersion": "2016-11-01"
  },
  "resources": [
    {
      "name": "[parameters('adlStoreName')]",
      "type": "Microsoft.DataLakeStore/accounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-11-01",
      "properties": {
        "firewallRules": [
          {
            "name": "[concat(parameters('adlStoreName'), 'rule1')]",
            "properties": {
              "startIpAddress": "[parameters('startIpAddress')]",
              "endIpAddress": "[parameters('endIpAddress')]"
            }
          }
        ],
        "firewallState": "Enabled",
        "firewallAllowAzureIps": "Enabled"
      }
    },
    {
      "name": "[parameters('adlAnalyticsName')]",
      "type": "Microsoft.DataLakeAnalytics/accounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-11-01",
      "dependsOn": [
        "[concat('Microsoft.DataLakeStore/accounts/', parameters('adlStoreName'))]"
      ],
      "tags": {},
      "properties": {
        "defaultDataLakeStoreAccount": "[parameters('adlStoreName')]",
        "dataLakeStoreAccounts": [
          {
            "name": "[parameters('adlStoreName')]"
          }
        ],
        "firewallRules": [
          {
            "name": "[concat(parameters('adlAnalyticsName'), 'rule2')]",
            "properties": {
              "startIpAddress": "[parameters('startIpAddress')]",
              "endIpAddress": "[parameters('endIpAddress')]"
            }
          }
        ],
        "firewallState": "Enabled",
        "firewallAllowAzureIps": "Enabled"
      }
    }
  ],
  "outputs": {
    "adlarid": {
      "type": "string",
      "value": "[resourceId('Microsoft.DataLakeAnalytics/accounts', parameters('adlAnalyticsName'))]"
    },
    "adlan": {
      "type": "string",
      "value": "[parameters('adlAnalyticsName')]"
    },
    "adlarg": {
      "type": "string",
      "value": "[parameters('rgName')]"
    },
    "adlsuri": {
      "type": "string",
      "value": "[concat('https://', parameters('adlStoreName'), '.azuredatalakestore.net/webhdfs/v1')]"
    }
  }
}